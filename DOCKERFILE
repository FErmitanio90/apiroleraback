# ğŸ Imagen base
FROM python:3.11-slim

# ğŸ“‚ Directorio de trabajo
WORKDIR /app

# ğŸ“¦ Instalar dependencias del sistema necesarias
RUN apt-get update -o Acquire::Retries=5 && apt-get install -y --no-install-recommends \
    build-essential \
    default-libmysqlclient-dev \
    pkg-config \
    gcc \
    && rm -rf /var/lib/apt/lists/*

# ğŸ“„ Copiar requirements
COPY requirements.txt /app/requirements.txt

# ğŸ§° Instalar dependencias de Python
RUN python -m pip install --upgrade pip setuptools wheel \
    && pip install --no-cache-dir -r /app/requirements.txt \
    && pip install --no-cache-dir gunicorn

# ğŸ“‚ Copiar el resto del cÃ³digo
COPY . .

# ğŸ§‘â€ğŸ’» Crear usuario no root (opcional pero recomendado)
RUN adduser --disabled-password appuser && chown -R appuser /app
USER appuser

# ğŸš€ Comando de arranque
CMD ["gunicorn", "--bind", "0.0.0.0:5000", "app:app"]
